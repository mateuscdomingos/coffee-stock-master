generator client {
  provider        = "prisma-client"
  output     = "./generated"
}

datasource db {
  provider = "postgresql"
}

model Store {
  id                   String   @id
  name                 String
  monthlyBudgetInCents Int
  orders               Order[]
  createdAt            DateTime @default(now())
}

model Order {
  id                 String   @id @default(uuid())
  storeId            String
  employeeId         String
  status             String
  totalAmountInCents Int
  createdAt          DateTime @default(now())
  
  items              OrderItem[]
  store              Store       @relation(fields: [storeId], references: [id])
  user               User        @relation(fields: [employeeId], references: [id])

  @@index([storeId, createdAt])
}

model OrderItem {
  id               String @id @default(uuid())
  orderId          String
  productId        String
  name             String
  quantity         Int
  unitPriceInCents Int
  
  order            Order  @relation(fields: [orderId], references: [id])
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  orders Order[]
}
